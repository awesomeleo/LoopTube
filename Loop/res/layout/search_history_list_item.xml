<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <com.kskkbys.loop.ui.widget.HorizontalAutoScrollView
        android:id="@+id/search_history_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dummy_thumbnail" />

            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dummy_thumbnail" />

            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dummy_thumbnail" />

            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dummy_thumbnail" />

            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/dummy_thumbnail" />
        </LinearLayout>
    </com.kskkbys.loop.ui.widget.HorizontalAutoScrollView>

    <!-- This layout intercept click/long click events -->
    <LinearLayout
        android:id="@+id/search_history_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/search_history_overlay"
        android:orientation="horizontal" >
    </LinearLayout>

    <TextView
        android:id="@+id/search_history_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>