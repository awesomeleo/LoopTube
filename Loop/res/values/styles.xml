<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Loopactionbar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <item name="android:editTextStyle">@style/EditTextLoopTheme</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLoopTheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxLoopTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonLoopTheme</item>
        <item name="android:buttonStyle">@style/ButtonLoopTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonLoopTheme</item>
        <item name="android:spinnerStyle">@style/SpinnerLoopTheme</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerLoopTheme.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemLoopTheme</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLoopTheme</item>
        <item name="android:seekBarStyle">@style/SeekBarLoopTheme</item>
        <item name="android:buttonStyleToggle">@style/ToggleLoopTheme</item>
        <item name="android:listViewStyle">@style/ListViewLoopTheme</item>
        <item name="android:listViewWhiteStyle">@style/ListViewLoopTheme.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemLoopTheme</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


