<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Loopactionbar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:editTextBackground">@drawable/edit_text_holo_dark</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLoopTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_dark</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_dark</item>
        <item name="android:buttonStyle">@style/ButtonLoopTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonLoopTheme</item>
        <item name="android:dropDownSpinnerStyle">@style/SpinnerLoopTheme</item>
        <item name="android:tabWidgetStyle">@style/TabWidgetLoopTheme</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarLoopTheme</item>
        <item name="android:seekBarStyle">@style/SeekBarLoopTheme</item>
        <item name="android:ratingBarStyle">@style/RatingBarLoopTheme</item>
        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigLoopTheme</item>
        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallLoopTheme</item>
        <item name="android:buttonStyleToggle">@style/ToggleLoopTheme</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_dark</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_dark</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
    </style>

</resources>